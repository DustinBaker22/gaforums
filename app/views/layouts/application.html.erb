<!DOCTYPE html>
<html>
<head>

  <title>SignUp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<body>
  <div class="container">
    <div class="header">
       <%= image_tag "galogo.png" %>
    </div>
  </div>


<%= yield %>


     <div class="container">
      <div class="footer">
       <ul class="list-inline">
         <% if current_user %>
          <li><%= link_to "About Us", "about" %></li>
          <li><%= link_to "Help Center", "help" %></li>
          <li><%= link_to "Contact", "contact" %></li>
        </ul>
        <ul class="list-inline">
          <li>Signed in as <strong><%= current_user.name %></strong></li>
          <li><%= link_to "Logout", "/logout" %></li>
        </ul>
         <% else %>
          <li><%= link_to "Login", "/login" %></li>
          <li><%= link_to "Sign Up", "signup" %></li>
          <li><%= link_to "About Us", "about" %></li>
          <li><%= link_to "Help Center", "help" %></li>
          <li><%= link_to "Contact", "contact" %></li>
         <% end %>
       	</ul>
     </div>
   </div>
</body>
</html>
