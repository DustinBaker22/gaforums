<div class="main">
	<div class="container">
		<div class="row-fluid">
		<div class= "span4">
			<div class="col-md-7">

      <h1>Login</h1>

      <%= form_tag('/login', method: :post) do %>
				<div class="form-group">
					<p>Email<br><%= text_field_tag :email, nil, :class => 'inputBox' %></p>
				</div>
				<div class="form-group">
					<p>Password<br><%= password_field_tag :password, nil, :class => 'inputBox' %></p>
				</div>
          <%= submit_tag 'Login', class: 'btn btn-default' %>
					<a class="btn btn-default" href="/signup" role="button" id="signupBtn">SignUp</a>

      <% end %>

      </div>
		</div>
		</div>
	</div>
</div>